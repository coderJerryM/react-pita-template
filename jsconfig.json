{
  "compilerOptions": {
    "target": "esnext",
    "checkJs": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "module": "commonjs",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "types": [
        "./types/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "temp"
  ],
  "include": [
    "src/**/*",
    "types/**/*"
  ]
}